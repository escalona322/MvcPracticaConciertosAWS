@model List<Evento>
@{ 
    List<CategoriaEvento> categorias = ViewData["CATEGORIAS"] as List<CategoriaEvento>;
}
<h1>Update categoria evento</h1>

<form method="post">
    <h2>Evento:</h2>
    <select name="idevento">
        @foreach(Evento ev in Model)
            {
                <option value="@ev.IdEvento">
                    @ev.Nombre
                </option>
            }
    </select>
    <br/>
    <h2>Categoria: </h2>
    <select name="idcategoria">
        @foreach (CategoriaEvento cat in categorias)
        {
            <option value="@cat.IdCategoria">
                @cat.Nombre
            </option>
        }
    </select>
    <br/>
    <button type="submit">
        Enviar
    </button>
</form>